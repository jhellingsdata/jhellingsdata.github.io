{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "https://www.worldbank.org/en/publication/human-capital. ",
    "title": {
      "text": "Human Capital Index",
      "subtitle": [
        "Distance to optimal education and full health, source: World Bank",
        "GDP: per capita PPP (international $)",
        ""
      ],
      "fontSize": 16,
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 12,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch2_Growth/data/chart2_9_HumanCapital_GDP.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {"filter": "datum['Human Capital Index'] > 0"},
      {"filter": "datum['GDP per capita (PPP)'] > 1000"}
    ],
    "mark": {"type": "circle", "size": 150, "opacity": 0.8},
    "height": 300,
    "width": 500,
    "view": {"stroke": "transparent"},
    "encoding": {
      "y": {
        "field": "GDP per capita (PPP)",
        "type": "quantitative",
        "title": "GDP (log scale)",
        "scale": {"type": "log", "domain": [1000, 140000]},
        "axis": {
          "values": [1000, 2000, 5000, 10000, 20000, 40000, 100000],
          "format": "$,",
          "gridOpacity": 0.3,
          "labelPadding": 5,
          "labelFontSize": 11,
          "ticks": false
        }
      },
      "x": {
        "field": "Human Capital Index",
        "type": "quantitative",
        "title": "Human Capital Index",
        "scale": {"domain": [0.25, 0.9]},
        "axis": {
          "gridOpacity": 0.3,
          "labelPadding": 5,
          "labelFontSize": 11,
          "ticks": false,
          "tickCount": 8,
          "titlePadding": 6
        }
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "scale": {"scheme": "set1"},
        "legend": {"orient": "top", "offset": 10},
        "title": null
      },
      "size": {
        "field": "Population",
        "type": "quantitative",
        "scale": {"range": [12, 1000]},
        "legend": null
      },
      "tooltip": [
        {"field": "Country"},
        {"field": "Human Capital Index", "type": "quantitative", "format": ".3"},
        {"field": "Population", "format": ",d"},
        {
          "field": "GDP per capita (PPP)",
          "title": "GDP per capita",
          "format": "$,d"
        }
      ]
    },
    "config": {"style": {"cell": {"stroke": "transparent"}}}
  }