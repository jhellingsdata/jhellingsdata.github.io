{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "US EIA chart from API",
  "title": {
    "text": "Solar - Global electricity generation",
    "color": "#54bb8e",
    "fontSize": 14,
    "subtitlePadding": 5,
    "fontWeight": 600,
    "subtitle": "quadrillion Btu generated. World, Annual. Source: US EIA",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start"
  },
  "data": {
    "url": "https://api.eia.gov/v2/international/data/?frequency=annual&data[0]=value&facets[activityId][]=12&facets[productId][]=116&facets[countryRegionId][]=WORL&facets[unit][]=QBTU&sort[0][column]=period&sort[0][direction]=desc&offset=0&length=5000&api_key=cKNHOE6oTscEBlfP9TF7LXFAK68fOfbzhTVn3HO0",
    "format": {"type": "json", "property": "response.data"}
  },

  "transform": [
    {"calculate": "year(datum.period)", "as": "year"},
    {"filter": "datum.year >= 1990"}
  ],
  "height": 300,
  "width": 300,
  "mark": {"type": "bar", "color": "#F4B724"},
  "encoding": {
    "x": {
      "field": "period",
      "type": "temporal",
      "axis": {"title": null, "grid": false, "ticks": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "",
      "axis": {"grid": false}
    },
    "tooltip": [
      {
        "field": "period",
        "title": "Year",
        "formatType": "time",
        "format": "%Y"
      },
      {"field": "value", "title": "Quadrillion Btu", "format": ".5"}
    ]
  }
}