{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "Emissions data using satellite imagary // source , 3 data points for 19-21st November",
  
  "data": {"url": "https://raw.githubusercontent.com/jhellingsdata/jhellingsdata.github.io/main/data/CO_emissionsData_added.json"},

  "title": {
    "text": "UK Carbon Monoxide Emissions",
    "subtitle": ["Emissions data using satellite imagary", " - European Space Agency"],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black",
    "subtitlePadding": 3
  },

  "mark":{
    "type": "circle",
    "color":"red",
    "opacity":0.5
  },
   
  "height":230,
  "width":280,
  
  "encoding": {
    
    "x": {
      "field": "end", 
      "type": "temporal", 
      "timeUnit":"yearmonthdate",
      "title":null
      },

    "y": {
      "field": "average", 
      "type": "quantitative",
      "scale": {"domain": [0.02, 0.045]},
      "title": null
      },

    "color":{
      "field":"end", 
      "timeUnit":"year", 
      "scale": {"scheme": "inferno"},
      "legend": {"orient": "bottom", "title": null}
    },

    "tooltip":[
      {"field": "average", "title": "mol/mÂ²", "format": ".5f"},
      {"field": "end", "title":"Date", "timeUnit":"yearmonthdate"}
    ]
    
  }
}