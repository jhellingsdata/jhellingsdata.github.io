{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "Velocity of M3 money UK, graph takes monthly M3 money data, calculates the quarterly mean, then extracts the temporaneous quarterly GDP values from another dataset. Had to employ a few tricks to get equivalent date formating on each dataset so they could be merged. Should update correctly as new monthly/quarterly data is released.",

  "title": {
    "text": "Velocity of Money - United Kingdom",
    "subtitle": ["Ratio of quarterly nominal GDP to mean quarterly M3 money, source: FRED"],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start"
  },

  "config": {
    "view": {"stroke": "transparent"}
  },
 

    "width": 300,
    "height": 300,


  "data": {"name": "M3", "url": "https://api.allorigins.win/raw?url=https%3A%2F%2Fapi.stlouisfed.org%2Ffred%2Fseries%2Fobservations%3Fseries_id%3DMABMM301GBM189S%26api_key%3D838a40e4f5a37b6b4d8c9cfc4b1abaff%26file_type%3Djson",
    "format":{
      "type": "json",
      "property": "observations",
      "parse": {
        "date": "date"
      }
    }
  },


  "transform": [
    {"timeUnit": "yearmonth", "field": "date", "as": "Date"},
    {"timeUnit": "yearquarter", "field": "Date", "as": "quarter"},
    {
      "joinaggregate": [{
        "op": "average",
        "field": "value",
        "as": "quarterMean"
      }],
      "groupby": ["quarter_end"]
    },
    {"calculate": "timeFormat(datum.date, '%Y-%m-%d')", "as": "datekey"},
    {
      "lookup": "datekey",
      "from": {
        "data": {"url": "https://api.allorigins.win/raw?url=https%3A%2F%2Fapi.stlouisfed.org%2Ffred%2Fseries%2Fobservations%3Fseries_id%3DUKNGDP%26api_key%3D838a40e4f5a37b6b4d8c9cfc4b1abaff%26file_type%3Djson", "format": {"type":"json", "property": "observations", "parse": {"date": "date"}}},
        "key": "date",
        "fields": ["value"]
      },
      "as": ["GDP"]
    },
    {"calculate": "1000000*datum.GDP/datum.value", "as": "Velocity"},
    {"calculate": "datum.value/1000000", "as": "M3"},
    {"filter": "datum.Velocity != 0"}
  ],


  "encoding": {      
    "x": {
      "field": "quarter_end",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": false,
        "labelSeparation": 10
      }
    }
  },

  "layer": [
    {
      "encoding": {
        "y": {
          "field": "Velocity",
          "type": "quantitative",
          "title": "",
          "scale": {
            "domain": [0,0.5]
          },
          "axis": {
            "gridOpacity": 0.6,
            "ticks": false,
            "labelPadding": 5
          }
        }
      },
      "layer": [
        {"mark": {"type": "line", "interpolate": "monotone", "color": "#004c4c", "opacity": 0.7}},
        {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field" : "quarter_end", "title": "Date", "timeUnit": "yearquarter"},
          {"field": "Velocity", "type": "quantitative", "title": "Velocity", "format": ".4"},
          {"field": "GDP", "type": "quantitative", "title": "Nominal GDP £m", "format": ","},
          {"field": "M3", "type": "quantitative", "title": "M3 Money £m", "format": "7,"}
        ]
      },
      "params": [{
        "name": "hover",
        "select": {
          "type": "point",
          "fields": ["quarter_end"],
          "nearest": true,
          "on": "mouseover",
          "clear": "mouseout"
        }
      }]
    }
  ]
}