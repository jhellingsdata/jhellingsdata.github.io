{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/jhellingsdata.github.io/refs/heads/main/Data/btc_usd_historical_price.csv",
    "format": {"type": "csv"}
  },
  "view": {"stroke": "transparent"},
  "title": {
    "text": "Price of Bitcoin",
    "subtitle": [
      "Daily BTC price, current US Dollars",
      "Source: Investing.com"
    ],
    "fontSize": 14,
    "offset": 10,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "anchor": "start",
    "color": "black"
  },
  "height": 250,
  "width": 300,
  "transform": [
    {"calculate": "year(datum.Date)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"},
    {
      "sort": [{"field": "Date"}],
      "window": [{"op": "last_value", "field": "Price", "as": "lastPrice"}],
      "frame": [null, null]
    }
  ],
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {
        "labelAngle": 0,
        "grid": false,
        "ticks": false,
        "labelPadding": 5,
        "labelFontSize": 11
      }
    }
  },
  "params": [
    {
      "name": "minYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2023,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2024,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "layer": [
    {
      "mark": {"opacity": 1, "type": "area", "color": "#e6224b"},
      "encoding": {
        "y": {
          "field": "Low",
          "type": "quantitative",
          "title": "",
          "axis": {
            "grid": true,
            "gridOpacity": 0.6,
            "format": "$,.0f",
            "ticks": false,
            "labelPadding": 5,
            "labelFontSize": 11
          }
        },
        "y2": {"field": "High"}
      }
    },
    {
      "encoding": {
        "color": {"value": "#e6224b"},
        "y": {
          "field": "Low",
          "type": "quantitative",
          "title": "",
          "axis": {
            "grid": true,
            "gridOpacity": 0.6,
            "format": "$,.0f",
            "ticks": false,
            "labelPadding": 5,
            "labelFontSize": 11
          }
        }
      },
      "layer": [
        {"mark": {"type": "line", "size": 1.4}},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": "point"
        }
      ]
    },
    {
      "mark": "rule",
      "transform": [
        {
          "filter": "(maxYear-minYear)>5 ? date(datum.Date) == 1 : day(datum.Date) == 1"
        },
        {
          "calculate": "(datum.lastPrice - datum.Price) / datum.Price",
          "as": "priceChange"
        }
      ],
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Date", "type": "temporal"},
          {
            "field": "Price",
            "type": "quantitative",
            "format": "$,d",
            "title": "Price"
          },
          {"field": "High", "type": "quantitative", "format": "$,d"},
          {"field": "Low", "type": "quantitative", "format": "$,d"},
          {
            "field": "priceChange",
            "type": "quantitative",
            "format": ",.0%",
            "title": "Returns since this day"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Date"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ]
}