{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch5_crisis/data/chart5_x_GFC_GDP.csv"
    },
    "width": 300,
    "height": 250,
    "title": {
      "text": "Real GDP Per Capita",
      "subtitle": [
        "2011 USD. Source: FRED"
      ],
      "align": "left",
      "anchor": "start",
      "fontSize": 14,
      "offset":10, 
      "subtitleFontSize": 11,
      "subtitleFontStyle": "italic"
    },
    "config": {"view": {"stroke": "transparent"}},
    "transform": [
      {
        "filter": "minYear < maxYear ? (year(datum.Date)>=minYear & year(datum.Date)<=maxYear): (year(datum.Date)<=minYear & year(datum.Date)>=maxYear)"
      },
      {"calculate": "year(datum.Date)", "as": "foo"}
    ],
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "axis": {"grid": false, "tickOpacity": 0, "labelPadding": 5}
      }
    },
    "params": [
      {
        "name": "toggleZero",
        "value": false,
        "bind": {"input": "checkbox", "name": "Start y-axis at 0"}
      },
      {
        "name": "minYear",
        "value": 2000,
        "bind": {
          "input": "range",
          "min": 1948,
          "max": 2022,
          "step": 1,
          "name": "Start year:"
        }
      },
      {
        "name": "maxYear",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 1801,
          "max": 2023,
          "step": 1,
          "name": "End year:"
        }
      }
    ],
    "layer": [
      {
        "transform": [
          {
            "filter": "year(datum.Date) >= minYear & year(datum.Date) < maxYear & (maxYear-minYear < 29)"
          }
        ],
        "data": {"values": [{"Date": 1199145600000}]},
        "mark": {
          "type": "text",
          "dy": -6,
          "dx": -1,
          "fontWeight": "bold",
          "color": "rgba(128,0,0,0.5)",
          "align": "left",
          "text": "Recovery"
        },
